{
    "name": "video-annotator",
    "version": "1.1.0",
    "description": "Transparent overlay annotation tool for video editors",
    "main": "dist/main/main/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
        "dev:main": "tsc -p tsconfig.main.json --watch",
        "dev:preload": "tsc -p tsconfig.preload.json --watch",
        "dev:renderer": "vite",
        "build": "npm run build:main && npm run build:preload && npm run build:renderer",
        "build:main": "tsc -p tsconfig.main.json",
        "build:preload": "tsc -p tsconfig.preload.json",
        "build:renderer": "vite build",
        "start": "electron .",
        "package": "electron-builder"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "fabric": "^5.3.0",
        "font-list": "^2.0.1",
        "react-router-dom": "^6.21.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/fabric": "^5.3.0",
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/uuid": "^9.0.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "postcss": "^8.4.32",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "zustand": "^4.4.0"
    },
    "build": {
        "appId": "com.videoannotator.app",
        "productName": "Video Annotator",
        "directories": {
            "output": "release"
        },
        "asar": true,
        "compression": "maximum",
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "fileAssociations": [
            {
                "ext": [
                    "png",
                    "jpg",
                    "jpeg",
                    "webp",
                    "bmp",
                    "gif"
                ],
                "name": "Image File",
                "description": "Open with Video Annotator",
                "role": "Editor",
                "icon": "assets/icon.ico"
            }
        ],
        "portable": {
            "artifactName": "${productName}.exe"
        },
        "files": [
            "dist/**/*",
            "assets/**/*"
        ],
        "extraResources": [],
        "npmRebuild": false
    }
}
